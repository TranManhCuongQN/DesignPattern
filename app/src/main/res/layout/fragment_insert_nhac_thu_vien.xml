<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030E0C"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toilbartimkiemthuvien"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:collapseIcon="?attr/actionModeCloseDrawable"
        app:title="Nghệ sĩ, bài hát"
        app:titleTextColor="#FFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewtimkiemthuvien"
        android:background="@drawable/bgr_insertthuvien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toilbartimkiemthuvien" />

    <TextView
        android:visibility="gone"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Khônng tìm thấy bài hát này :("
        android:textSize="27sp"
        android:id="@+id/textviewtimkiemnullthuvien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>